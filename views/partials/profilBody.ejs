
<div class="row-flex">

    
    <div id="profil-user-products-card-container">

   

   <% userProducts.forEach(product=>{ %> 

      <div class="profil-user-products-card">  
    <p>product id : <%= product.id %></p>
    <p>product name : <%= product.name %></p>
    <p>product description : <%= product.description %></p>
    <p>product link : <%= product.link %></p>
    </div> 
    <hr class="bold-custom-hr">
 <% }); %> 

</div>

<%# product submission form %>

<form action="/submitProduct" method="post" class="custom-form-submission" enctype="multipart/form-data">
    <input type="text" name="userId" value="<%= userId %>" hidden="true">
    <input type="text" placeholder="name" name="name">
    <input type="text" placeholder="link" name="link">
    <textarea id="" name="description" placeholder="description"></textarea>
    <input type="file" name="imageUrl" accept="image/*" id="" required>

    <input type="submit" value="Submit">

</form>
 

</div>

